<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:id="@+id/ll_infoBox">

    <io.github.florent37.shapeofview.shapes.CutCornerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_cutCorner_topRightSize="16dp">


        <LinearLayout
            android:id="@+id/ll_infobox_inside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/goodtogo_blue"
            android:padding="10dp"
            android:elevation="4dp">

            <View
                android:id="@+id/smallbar"
                android:layout_width="24dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            <TextView
                android:id="@+id/scanWord"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginEnd="10dp"
                android:text="尚未掃瞄任何容器"
                android:gravity="bottom"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_gravity="end"
                />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:text="1"
                    android:textSize="30sp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bottom_infobox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_input_cup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:text="#12345\n#14287\n#20031"/>

        </LinearLayout>


    </io.github.florent37.shapeofview.shapes.CutCornerView>













</LinearLayout>